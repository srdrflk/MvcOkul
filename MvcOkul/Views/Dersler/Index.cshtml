@using MvcOkul.Models.Entity
@model List<TblDersler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ders Id</th>
            <th>Ders Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td width="75px">@x.DersId</td>
                <td>@x.DersAd</td>
                <td><a href="/Dersler/Listele/@x.DersId" class="btn btn-warning">Güncelle</a> </td>
                <td><a href="/Dersler/Sil/@x.DersId" class="btn btn-danger" onclick="return confirm('Silmek istediğinden emin misin?')">Sil</a> </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Dersler/Ekle" class="btn btn-primary">Yeni Ders Ekle</a>

